program Project1;

{$APPTYPE CONSOLE}

uses
  System.SysUtils;

type mas = array[1..200,1..200] of integer;
var A: mas;
    i,j,temp,m,n,tmp: integer;


procedure swap(var x: integer; var y: integer);
var tmp: integer;
begin
tmp:=x;
x:=y;
y:=tmp;
end;
{√è√∞√Æ√∂√•√§√≥√∞√* √Æ√°√∞√*√°√Æ√≤√™√®. }
procedure obr(var A: mas; temp: integer);
begin
if temp = 0 then writeln('√ç√≥√´√•√¢√Æ√© √±√≤√∞√Æ√™√® √*√•√≤!')
else begin
writeln('√è√•√∞√•√±√≤√*√*√Æ√¢√™√*:');
  for j:=1 to n do swap(A[1,j],A[temp,j]);
end;
for i:=1 to m do begin
  for j:=1 to n do write(A[i,j]:4);
    writeln;
  end;
end;
{√É√´√*√¢√*√*√ø √Ø√∞√Æ√£√∞√*√¨√¨√*.}
begin //clrscr;
randomize;
write('√Ç√¢√•√§√®√≤√• √™√Æ√´√®√∑√•√±√≤√¢√Æ √±√≤√∞√Æ√™: '); readln(m);
write('√Ç√¢√•√§√®√≤√• √™√Æ√´√®√∑√•√±√≤√¢√Æ √±√≤√Æ√´√°√∂√Æ√¢: '); readln(n);
writeln('√à√±√µ√Æ√§√*√*√ø √¨√*√≤√∞√®√∂√*:');
for i:=1 to m do begin
  for j:=1 to n do begin
  A[i,j]:=random(26);
  write(A[i,j]:4);
  end;
  writeln;
end;
writeln;
writeln;
for i:=m downto 1 do
  for j:=n downto 1 do
    if A[i,j]=0 then temp:=i;
obr(A,temp);
//readkey;
end.

